
<h4><%= link_to "VIVIDAURA", root_path, class: "brand" %></h4>

	<li><%= link_to "Discover", tracks_path %></li>
	
	<% if user_signed_in? %>

	<li><%= link_to "Create Track", new_track_path %></li>
	<li><%= link_to 'Edit Profile', edit_user_registration_path %> </li>
	<li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %> </li>
<li class="divider"></li>
<div class="menu_userinfo">
	<img src=<%= current_user.avatar.thumb.url %>>
	<strong><li><%= link_to current_user.username, current_user %></li></strong>
	<%= render 'users/stats' %>
</div>
	<% else %>
	<li><%= link_to 'Login', new_user_session_path %> </li>
	<li><%= link_to 'Register', new_user_registration_path %> </li>	
	<% end %>


