<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @track.title %>
</p>

<p>
	<audio controls="controls">
	<source src= <%= @track.audio.url %> type="audio/mpeg">
	</audio>
</p>

<p>
  <strong>Description:</strong>
  <%= @track.description %>
</p>

<p>
	<strong>User:</strong>
<%= link_to @track.user.username, @track.user %>
</p>
<% if current_user == @track.user %>
	<%= link_to 'Edit', edit_track_path(@track) %> |
	<%= link_to 'Destroy', @track, method: :delete, data: { confirm: 'Are you sure?' } %>|
<% end %>
<%= link_to 'Back', tracks_path %>