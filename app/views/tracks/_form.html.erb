<%= simple_form_for(@track, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

<%= f.input :title %>
<p class="upload_audio">Upload Audio <%= f.file_field :audio %></p>
<%= f.input :description %>

<div class="form-actions">
	<%= f.button :submit, class: "btn btn-primary" %>
</div>

  <% end %>