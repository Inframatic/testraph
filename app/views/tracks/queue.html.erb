<% if !@disapproved_stems.blank? %>

<% @disapproved_stems.each do |stem| %>
	<h3><%= stem.title %></h3>
	<p>
		<audio controls="controls" class="audio_player">
			<source src= <%= stem.audio.url %> type="audio/mpeg">
		</audio>
		
<%= link_to "Approve", track_stem_approve_path(@track, stem), :method => :put %>
	</p>

	<%= link_to "Destroy", track_stem_path(@track, stem), method: :delete, data: {confirm: 'Are you sure you want to delete this stem?'} %>

<% end %>

<% else %>

<h1>Currently no queued tracks.</h1>

<% end %>

