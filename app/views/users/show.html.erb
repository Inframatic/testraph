<h1 class="user_profile_name"><%= @user.username %></h1>
<div class="avatar">
	<img src=<%=@user.avatar.thumb.url%>>
</div>
<p> <%= render 'stats' %> </p>
<p>

  <% unless current_user.id.to_s == params[:id] %>
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  <% end %>
</p>



<% current_user.tracks.each do |t| %>
<p>
<%= link_to t.title, t %>
</p>
<% end %>