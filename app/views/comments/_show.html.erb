<% @comments.each do |comment| %>

<div class="row-fluid">
	<div class="span6 well">
<p><%= comment.text %></p>
<img src=<%=comment.user.avatar.small_thumb.url%>>&nbsp;<%= link_to comment.user.username, @track.user %>
<%= format_date(comment.created_at) %>

<% if current_user == comment.user %>
	<%= link_to "Destroy", track_comment_path(@track, comment), method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'} %>
	<% end %>
</div>
</div>

<% end %>